{
  "name": "server_v2",
  "version": "1.0.0",
  "description": "TypeScript-based backend server for water quality monitoring system",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch src --ext ts --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start": "node dist/index.js",
    "start:prod": "npm run build && npm start",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:publish": "ts-node -r tsconfig-paths/register scripts/publishTestSensorData.ts",
    "docker:build": "docker build -t wqm-server:latest .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t wqm-server:dev .",
    "docker:up": "docker-compose up -d",
    "docker:up:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:up:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "docker:down:dev": "docker-compose -f docker-compose.dev.yml down",
    "docker:down:prod": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v && docker system prune -f"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "_moduleAliases": {
    "@core": "./dist/core",
    "@feature": "./dist/feature",
    "@utils": "./dist/utils",
    "@types": "./dist/types"
  },
  "dependencies": {
    "@types/helmet": "^0.0.48",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.4",
    "@types/socket.io": "^3.0.1",
    "@types/uuid": "^8.3.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "firebase-admin": "^13.6.0",
    "helmet": "^8.1.0",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^9.0.0",
    "mqtt": "^5.14.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.11",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "systeminformation": "^5.27.11",
    "uuid": "^8.3.2",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.10.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
